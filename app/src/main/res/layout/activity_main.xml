<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <Button
        android:id="@+id/ajBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4182B1FF"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="AJOUTER"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <Button
        android:id="@+id/modBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4182B1FF"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="MODIFIER"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <Button
        android:id="@+id/supBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4182B1FF"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="SUPPRIMER"
        android:textAllCaps="false"
        android:textColor="#2B2B2B" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Nom"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nameEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Prénom"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/preEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Adresse"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/adrEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">
    <Button
        android:id="@+id/conBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4182B1FF"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="CONFIRMER"
        android:textAllCaps="false"
        android:textColor="#2B2B2B" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Résultat"
        android:textSize="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        >
    <CheckBox
        android:id="@+id/LicCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licence"
        android:textSize="25dp"
        />
    <CheckBox
        android:id="@+id/MasCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master"
        android:textSize="25dp"
        />
    <CheckBox
        android:id="@+id/DocCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctorat"
        android:textSize="25dp"
        />
    </LinearLayout>

</LinearLayout>